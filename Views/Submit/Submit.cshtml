@model Message

@{
    ViewData["Title"] = "Submit  Page";
}

<div class="text-center">
    <h1 class="display-4">Submit</h1>
    <form asp-action="Submit" method="post">
        <div class="mb-2">
            <label asp-for="MessageText" class="form-label">Message</label>
            <input asp-for="MessageText" class="form-control">
        </div>
        <div class="mb-2">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="mb-2">
            <label asp-for="Location" class="form-label">Location</label>
            <input asp-for="Location" class="form-control">
        </div>
        <input type="hidden" asp-for="MessageId">
        <button type="submit" class="btn btn-primary btn-dark">Submit</button>
        <button asp-controller="Home" asp-action="Index"
           class="btn btn-primary btn-dark">Cancel</button>
    </form>
</div>
